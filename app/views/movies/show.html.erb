<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>

      <dt>Image url</dt>
      <dd><%= @movie.image_url %></dd>

      <dt>Director</dt>
      <dd><a href="/directors/<%= @movie.director_id %>">
        <%= Director.find_by(:id => @movie.director_id).name %></dd>
      </a>

      <dt>Director</dt>
      <dd><a href="/directors/<%= @movie.director_id %>">
        <%= @movie.director.name %></dd>
      </a>

      <dt>Number of characters in movie</dt>
      <dd><%= Character.where(:movie_id => @movie.id).count %></dd>


      <ul>
        <% Character.where(:movie_id => @movie.id).each do |character| %>
        <li><%= Actor.find_by(:id => character.actor_id).name %></li>
        <% end %>
      </ul>

<!-- list of actor names (and character names) in movie -->
      <ul>
        <% @movie.characters.each do |character| %>
        <li><%= character.actor.name %>
          (<%= character.name %>)
        </li>

        <% end %>
      </ul>


    </dl>




    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>


